@model IEnumerable<AdminUser.Models.Reserva>

@{
    ViewData["Title"] = "UsuariosReserve";
}
<h1>Mis Reservas</h1>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FechaInicio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaFin)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Auto)
            </th>
            <th>
                Acciones disponibles
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FechaInicio)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FechaFin)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Auto.Modelo)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ReservaId">EDITAR</a> |
                    <a asp-action="Details" asp-route-id="@item.ReservaId">VER DETALLES</a> |
                    <a asp-action="Delete" asp-route-id="@item.ReservaId">ELIMINAR</a>|
                    <a asp-action="EntregaVehiculo" asp-route-id="@item.ReservaId">ENTREGAR VEHICULO </a>
                </td>
            </tr>
        }
    </tbody>
</table>