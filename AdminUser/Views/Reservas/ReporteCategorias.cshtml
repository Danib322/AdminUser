@model AdminUser.Models.reporteCategorias

@{
    ViewData["Title"] = "TopReservas";
}

<div class="row">
    <div class="col-md-6">
        <form asp-controller="Reservas" asp-action="ReporteCategorias">
            <p>
                Fecha desde: <input type="date" name="FechaInicio" />
                Fecha hasta: <input type="date" name="FechaFin" />
                <input type="submit" value="Buscar" class="btn btn-danger" />
            </p>
        </form>
    </div>
    <div class=" col-md-6">
        <h1>Categoria mas renta en rango de fechas</h1>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Categoria
                    </th>
                    <th>
                        Cantidad Reservas
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.ListaCategoria)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.categoria)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NumeroDeReservas)
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>
